<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

        <ImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivBackground"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/cardOrder"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/card_layout"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivBackground" />

        <ImageView
            android:id="@+id/ivOrders"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_orders"
            app:layout_constraintBottom_toBottomOf="@+id/cardOrder"
            app:layout_constraintStart_toStartOf="@+id/cardOrder"
            app:layout_constraintTop_toTopOf="@+id/cardOrder"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/orders"
            android:textAllCaps="true"
            android:textColor="@color/color_034173"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivOrders"
            app:layout_constraintStart_toEndOf="@+id/ivOrders"
            app:layout_constraintTop_toTopOf="@+id/ivOrders" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="@+id/ivOrders"
            app:layout_constraintEnd_toEndOf="@+id/cardOrder"
            app:layout_constraintTop_toTopOf="@+id/ivOrders"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/cardWorks"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_layout"
            android:backgroundTint="@color/color_034173"
            app:layout_constraintEnd_toEndOf="@+id/cardOrder"
            app:layout_constraintStart_toStartOf="@+id/cardOrder"
            app:layout_constraintTop_toBottomOf="@+id/cardOrder" />


        <ImageView
            android:id="@+id/ivWorks"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_workflow"
            app:layout_constraintBottom_toBottomOf="@+id/cardWorks"
            app:layout_constraintStart_toStartOf="@+id/cardWorks"
            app:layout_constraintTop_toTopOf="@+id/cardWorks"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/how_it_works"
            android:textAllCaps="true"
            android:textColor="@color/color_02B0C6"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivWorks"
            app:layout_constraintStart_toEndOf="@+id/ivWorks"
            app:layout_constraintTop_toTopOf="@+id/ivWorks" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="@+id/ivWorks"
            app:layout_constraintEnd_toEndOf="@+id/cardWorks"
            app:layout_constraintTop_toTopOf="@+id/ivWorks"
            app:tint="@color/color_02B0C6"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/cardAbout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_layout"
            app:layout_constraintEnd_toEndOf="@+id/cardWorks"
            app:layout_constraintStart_toStartOf="@+id/cardWorks"
            app:layout_constraintTop_toBottomOf="@+id/cardWorks" />

        <ImageView
            android:id="@+id/ivAbout"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_about"
            app:layout_constraintBottom_toBottomOf="@+id/cardAbout"
            app:layout_constraintStart_toStartOf="@+id/cardAbout"
            app:layout_constraintTop_toTopOf="@+id/cardAbout"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/about_us"
            android:textAllCaps="true"
            android:textColor="@color/color_034173"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivAbout"
            app:layout_constraintStart_toEndOf="@+id/ivAbout"
            app:layout_constraintTop_toTopOf="@+id/ivAbout" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="@+id/ivAbout"
            app:layout_constraintEnd_toEndOf="@+id/cardAbout"
            app:layout_constraintTop_toTopOf="@+id/ivAbout"
            tools:ignore="ContentDescription" />

        <View
            android:id="@+id/cardContact"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/card_layout"
            android:backgroundTint="@color/color_034173"
            app:layout_constraintEnd_toEndOf="@+id/cardOrder"
            app:layout_constraintStart_toStartOf="@+id/cardOrder"
            app:layout_constraintTop_toBottomOf="@+id/cardAbout" />

        <ImageView
            android:id="@+id/ivContact"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/ic_contact"
            app:layout_constraintBottom_toBottomOf="@+id/cardContact"
            app:layout_constraintStart_toStartOf="@+id/cardContact"
            app:layout_constraintTop_toTopOf="@+id/cardContact"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/contact_us"
            android:textAllCaps="true"
            android:textColor="@color/color_02B0C6"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivContact"
            app:layout_constraintStart_toEndOf="@+id/ivContact"
            app:layout_constraintTop_toTopOf="@+id/ivContact" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_forward"
            app:layout_constraintBottom_toBottomOf="@+id/ivContact"
            app:layout_constraintEnd_toEndOf="@+id/cardContact"
            app:layout_constraintTop_toTopOf="@+id/ivContact"
            app:tint="@color/color_02B0C6"
            tools:ignore="ContentDescription" />

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/cardContact" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>